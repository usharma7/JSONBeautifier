//metadata about the plugin
//contains description, version, name, etc

{

  "manifest_version": 2,
  "name": "Chrome change color example",
  "description": "This extension permits the user to change the background of their webpage to the color of their choosing",
  "version":"0.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions":[
    "activeTab",
    "storage"
  ],

  "background": {
    "scripts" :["popup.js"],
    "persistent": true
  }

}
